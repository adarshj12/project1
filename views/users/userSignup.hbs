<section>
    <!-- login area start -->
    <div class="login-register-area pt-100px pb-100px">
        <div class="container ">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                    <div class="login-register-wrapper">
                        <div class="login-register-tab-list nav">
                            <a class="active" data-bs-toggle="tab" href="#lg1">
                                <h4>REGISTER</h4>
                            </a>
                        </div>
                        <div class="tab-content">
                            <div id="lg1" class="tab-pane active">
                                <div class="login-form-container">
                                    <div class="login-register-form">
                                        <form action="/signup" method="post">
                                            {{!-- <input type="text" name="username" placeholder="Username" />
                                            <input type="email" name="useremail" placeholder="Email" />
                                            <input type="password" name="userpassword" placeholder="Password" /> --}}
                                            <input type="text"  id="contact-name" name="name" placeholder="Username" onkeyup="validateName()"/>
                                            <span id="name-error" style="color: red;"></span>
                                            <input type="email" name="email"   id="contact-email" placeholder="Email" onkeyup="validateEmail()"/>
                                            <span id="email-error" style="color: red;"></span>
                                            {{#if emailError}}
                                            <h4 class="text-danger" id="emailExistError">{{emailError}}</h4>
                                            {{/if}}
                                            <input type="text" name="mobile" placeholder="Phone No." id="contact-mobile" onkeyup="validateMobile()" />
                                            <span id="mobile-error" style="color: red;"></span>
                                            <input type="password" name="password" placeholder="Password" id="contact-password"  onkeyup="validatePassword()"/>
                                            <span id="password-error" style="color: red;"></span>
                                            <div class="button-box">
                                                <button type="submit" onclick="return validateForm()" id="contact-submit"><span>REGISTER</span></button>
                                                <div id="submit-error" style="color: red;"></div>
                                                <div><a href="/login">Go to Login</a></div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- login area end -->
</section>
 <script
  type="text/javascript">window.setTimeout("document.getElementById('emailExistError').style.display='none';", 3000); </script> 