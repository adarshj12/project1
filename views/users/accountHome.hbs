<section class="content-main ">

  <div class="card">
    <div class="card-body">
      <div class="row gx-5">
        <aside class="col-lg-3 border-end">
          <nav class="nav nav-pills flex-lg-column mb-4">
            <a class="nav-link active" href="account">Dashboard</a>
            <a class="nav-link " href="orders">My Orders</a>
            <a class="nav-link" href="address">Address</a>
          </nav>
        </aside>
        <div class="col-lg-9 ">
          <section class="mt-5">
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0">Hello {{user.name}}</h5>
              </div>
              <div class="card-body">
                <p>
                  From your account dashboard, you can easily manage your orders and delivery addresses
                  <a href="/update-profile">Update Profile</a>
                </p>
              </div>
            </div><br><br><br>
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">Wallet Balance</h5>

                <p class="card-text"><em>{{user1.wallet}}</em></p>
              </div>
            </div><br><hr><br>
             <h3><b>Latest Coupons</b></h3>
             <div class="row">
            {{#each coupons}}
             
            
                <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">Code</h5>

                <p class="card-text"><em>{{this.code}}</em></p>
                <p>Expires on - <p class="card-text" style="color: red;">{{this.endingdate}}</p></p>
              </div>
            </div>
            
          
            {{/each}}
             
              </div>
          </section>
        </div> <!-- col.// -->
      </div> <!-- row.// -->
    </div> <!-- card body end// -->
  </div> <!-- card end// -->
</section> <!-- content-main end// -->
<footer class="main-footer font-xs">