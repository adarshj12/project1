<section class="content-main ">
  <!-- OffCanvas Cart Start -->
    <div id="offcanvas-cart" class="offcanvas offcanvas-cart">
        <div class="inner">
            <div class="head">
                <span class="title">Cart</span>
                <button class="offcanvas-close">×</button>
            </div>
            <div class="body customScroll">
                <ul class="minicart-product-list">
                 
                   {{#each cartProd}}
                    <li>
                        <a href="" class="image"><img src="/productImages/{{this.product._id}}0.jpg"
                                alt="Cart product Image"></a>
                        <div class="content">
                            <a href="" class="title">{{this.product.name}}</a>
                            <span class="quantity-price">{{this.quantity}} x <span class="amount">₹{{this.product.price}}</span></span>
                            <a href="#" class="remove">×</a>
                        </div>
                    </li>
                    
                     
                    
                     {{/each}}
                     
                </ul>
            </div>
            <div class="foot">
                <div class="sub-total">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td class="text-start">Total :</td>
                                <td class="text-end theme-color">₹{{totalValue}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                 
                <div class="buttons">
                    {{#if user}}
                    <a href="/view-cart" class="btn btn-dark btn-hover-primary mb-30px">view cart</a>
                    {{#ifNotEquals cartCount 0}}
                    <a href="/place-order" class="btn btn-outline-dark current-btn">checkout</a>
                    {{/ifNotEquals}}
                    {{else}}
                     <a href="/login" class="btn btn-dark btn-hover-primary mb-30px">view cart</a>
                     <a href="/login" class="btn btn-outline-dark current-btn">checkout</a>
                     {{/if}}
                    
                </div>
               
            </div>
        </div>
    </div>
    <!-- OffCanvas Cart End -->
  <div class="card">
    <div class="card-body">
      <div class="row gx-5">
        <aside class="col-lg-3 border-end">
          <nav class="nav nav-pills flex-lg-column mb-4">
            <a class="nav-link active" href="account">Dashboard</a>
            <a class="nav-link " href="orders">My Orders</a>
            <a class="nav-link" href="address">Address</a>
          </nav>
        </aside>
        <div class="col-lg-9 ">
          <section class="mt-5">
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0">Hello {{user.name}}</h5>
              </div>
              <div class="card-body">
                <p>
                  From your account dashboard, you can easily manage your orders and delivery addresses
                  <a href="/update-profile">Update Profile</a>
                </p>
              </div>
            </div><br><br><br>
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">Wallet Balance</h5>

                <p class="card-text"><em>{{user1.wallet}}</em></p>
              </div>
            </div><br><hr><br>
             <h3><b>Latest Coupons</b></h3>
             <div class="row">
            {{#each coupons}}
             
            
                <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">Code</h5>

                <p class="card-text"><em>{{this.code}}</em></p>
                <p>Expires on - <p class="card-text" style="color: red;">{{this.endingdate}}</p></p>
              </div>
            </div>
            
          
            {{/each}}
             
              </div>
          </section>
        </div> <!-- col.// -->
      </div> <!-- row.// -->
    </div> <!-- card body end// -->
  </div> <!-- card end// -->
</section> <!-- content-main end// -->
<footer class="main-footer font-xs">