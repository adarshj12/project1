                <!-- table-responsive.// -->
                 <table class="table table-hover" id="example">
                            <thead>
                                <tr>
                                    <th scope="col">Sl.No.</th>
                                    <th scope="col">Image.</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Original Price</th>
                                    <th scope="col">Added Date</th>
                                    <th scope="col" class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                 {{#each productdetails}}
                                <tr>
                                    <td>{{counter @index}}</td>
                                    <td><img src="/productImages/{{this._id}}0.jpg" alt=""></td>
                                    <td>{{this.name}}</td>
                                    <td><b>{{this.category}}</b></td>
                                    {{!-- <td><template class="__cf_email__" data-cfemail="aec3cfdcd8c7c0eecbd6cfc3dec2cb80cdc1c3">[email&#160;protected]</template></td> --}}
                                     <td>{{this.description}}</td>
                                    <td>₹{{this.price}}</td>
                                    <td><span >{{#ifNotEquals this.originalPrice null}}<s>₹{{this.originalPrice}}</s>{{/ifNotEquals}}</span></td>
                                    <td>{{this.date}}</td>
                                     <td class="text-end">
                                        <a href="/admin/editProduct?id={{this._id}}"
                                            class="rounded font-sm mt-15"><i class="material-icons md-edit"></i></a>
                                        <a href="/admin/deleteProduct/{{this._id}} "
                                            class=" btn rounded font-sm mt-15" style="color: red;"
                                            onclick="return confirm('Are you sure you want to delete the product {{this.name}}?');"><i class="material-icons md-delete"></i></a>
                                    </td>
                                    
                                </tr>
                                  {{/each}}
                            </tbody>
                        </table>
            </div>

