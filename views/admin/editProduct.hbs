<section class="content-main">
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <h2 class="content-title">Edit Product</h2>
            </div>
        </div>



        <form action="/admin/editin-Product?id={{product._id}}" method="POST" enctype="multipart/form-data">
            <div class="col-lg-10">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-4">
                            <label for="product_name" class="form-label">Product title</label>
                            <input  name="name" type="text"  class="form-control"
                                id="product_name" value="{{product.name}}">
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Description</label>
                            <input name="description"  class="form-control"
                                rows="8" value="{{product.description}}"></input>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label">product Price</label>
                                    <div class="row gx-2">
                                        <input  name="price"   value="{{product.price}}" type="number" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label">Stock</label>
                                    <div class="row gx-2">
                                        <input  name="stock" value="{{product.stock}}" type="number" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- card end// -->
            </div>
            <div class="col-lg-10">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Media</h4>
                    </div>
                    <div class="card-body">
                        <div class="input-upload">
                            <img src="adminAsset/imgs/theme/upload.svg"  alt="">
                            <div class="row">
                                <div class="col">
                                    <input name="image1" multiple class="form-control" type="file"  onchange="viewImage1(event)"> 
                                </div>
                                 <div class="col">
                                    <img src="/productImages/{{product._id}}0.jpg" alt="" id="imageView1">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <input name="image2" multiple class="form-control" type="file"  onchange="viewImage2(event)">
                                </div>
                                 <div class="col">
                                    <img src="/productImages/{{product._id}}1.jpg" alt="" id="imageView2">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <input name="image3" multiple class="form-control" type="file"  onchange="viewImage3(event)">
                                </div>
                                 <div class="col">
                                    <img src="/productImages/{{product._id}}2.jpg" alt="" id="imageView3">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <input name="image4" multiple class="form-control" type="file"  onchange="viewImage4(event)">
                                </div>
                                 <div class="col">
                                    <img src="/productImages/{{product._id}}3.jpg" alt="" id="imageView4">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <input name="image5" multiple class="form-control" type="file"  onchange="viewImage5(event)">
                                </div>
                                 <div class="col">
                                    <img src="/productImages/{{product._id}}4.jpg" alt="" id="imageView5">
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- card end// -->
            </div>
            <div class="col-lg-10">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Categories</h4>
                    </div>
                    <div class="card-body">
                        <div class="row gx-2">
                            <div class="col-sm-6 mb-3">
                                <label class="form-label">Category</label>
                                <select name="category" class="form-select" value="{{product.category}}">
                                 {{#each category}}
                                   <option >{{this.name}}</option>
                                 {{/each}}
                                </select>
                            </div>

                        </div> <!-- row.// -->
                    </div>
                </div> <!-- card end// -->
            </div>
            <div class="col-lg-10">
                <div class="card mb-4">
                    <div class="card-body">
                        <button type="submit" class="btn btn-md rounded font-sm hover-up">Publish</button>
                        <a href="/admin/view-Products" class="btn btn-light rounded font-md ms-1">Cancel</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</section>


<script>
     function viewImage1(event){
        document.getElementById('imageView1').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage2(event){
        document.getElementById('imageView2').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage3(event){
        document.getElementById('imageView3').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage4(event){
        document.getElementById('imageView4').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage5(event){
        document.getElementById('imageView5').src=URL.createObjectURL(event.target.files[0])
    }
</script>

